<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph" app:startDestination="@id/quizAskFragment">

    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph" />

    <fragment android:id="@+id/quizAskFragment" android:name="com.example.quiz.ui.QuizAskFragment"
              android:label="QuizAskFragment">
        <action android:id="@+id/action_quizAskFragment_to_quizAnswerFragment"
                app:destination="@id/quizAnswerFragment"/>
    </fragment>
    <fragment android:id="@+id/quizAnswerFragment" android:name="com.example.quiz.ui.QuizAnswerFragment"
              android:label="quiz_answer_fragment" tools:layout="@layout/quiz_answer_fragment"/>
</navigation>